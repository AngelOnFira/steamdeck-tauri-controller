{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "steam-deck-controller",
  "version": "0.1.13",
  "identifier": "com.steamdeck-halloween.controller",
  "build": {
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "dx build --release",
    "frontendDist": "../target/dx/steam-deck-controller-ui/release/web/public"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "steam-deck-controller",
        "width": 1280,
        "height": 800,
        "fullscreen": true,
        "decorations": false,
        "resizable": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/angelonfira/steamdeck-tauri-controller/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY3MUMyMUNDNzhDNTEyRgpSV1F2VVl6SEhNSnhCcktacldmWk5GWlp2QThmVmdMbzlrbDdOYWorZ0xNS2VUVFI3eS9hUFZwWgo="
    }
  }
}
